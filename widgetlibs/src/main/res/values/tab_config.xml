<?xml version="1.0" encoding="utf-8"?>
<resources>
    <integer name="tab_indicator_anim_duration_ms">300</integer>
    <dimen name="tab_text_size">14sp</dimen>
    <dimen name="tab_max_width">264dp</dimen>
    <dimen name="tab_text_size_2line">12sp</dimen>
    <dimen name="tab_scrollable_min_width">72dp</dimen>
    <style name="TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/tabs_legacy_text_color_selector</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TabLayout">
        <item name="android:background">@null</item>
        <item name="tabIconTint">@null</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorAnimationDuration">@integer/tab_indicator_anim_duration_ms</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicator">@drawable/tabs_default_indicator</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabRippleColor">?attr/colorControlHighlight</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>
</resources>